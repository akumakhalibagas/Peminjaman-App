extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Pengajuan 
			small menu for editing pengajuan data 
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Lainnya  
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Pengajuan 
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/pengajuan/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama Peminjam 
									input(type='text',value="#{ (nama_peminjam == undefined)? data.nama_peminjam : nama_peminjam}",name='nama_peminjam',placeholder='Masukkan Nama', autofocus).form-control
								.form-group
									label
										| No Telp 
									input(type='text',value="#{ (no_telp == undefined) ? data.no_telp : no_telp }",name='no_telp',placeholder='Masukkan No Telp').form-control
								.form-group
									label
										| Nama Barang 
									input(type='text',value="#{ (spesialis == undefined) ? data.nama_barang: nama_barang }",name='nama_barang',placeholder='Masukkan Nama Barang').form-control
								.form-group
									label
										| Jumlah 
									input(type='text',value="#{ (jumlah == undefined) ? data.jumlah: jumlah }",name='jumlah',placeholder='Masukkan jumlah').form-control
								.form-group
									label
										| Kondisi Barang 
									input(type='text',value="#{ (kondisi == undefined) ? data.kondisi_barang: kondisi_barang }",name='kondisi_barang',placeholder='Masukkan Kondisi Barang').form-control
								.form-group
									label
										| Tgl Pinjam  
									input(type='text',value="#{ (tgl_pinjam == undefined) ? data.tgl_pinjam: tgl_pinjam }",name='tgl_pinjam',placeholder='Masukkan Tgl Pinjam').form-control
								.form-group
									label
										| Tgl Kembali 
									input(type='text',value="#{ (tgl_kembali == undefined) ? data.tgl_kembali : tgl_kembali }",name='tgl_kembali',placeholder='Masukkan Tgl Kembali').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/pengajuan').btn.btn-primary.pull-right
									| Back